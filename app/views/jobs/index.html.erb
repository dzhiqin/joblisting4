<div class="pull-right">
  <%=link_to('order',new_job_path,:class=>"btn btn-success")%>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <th>招聘岗位</th>
      <th>最低工资</th>
      <th>最高工资</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%=link_to(job.title,job_path(job))%></td>
        <td><%=job.wage_lower_bound%></td>
        <td><%=job.wage_upper_bound%></td>
        <td><%=job.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
