<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-order"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">排序<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdown-order">
    <li><%=link_to("按照最低工资排序",jobs_path(:c=>@category,:order=>"by_lower_bound"))%></li>
    <li><%=link_to("按照最高工资排序",jobs_path(:c=>@category,:order=>"by_upper_bound"))%></li>
    <li><%=link_to("按照发布时间排序",jobs_path(:c=>@category) )%></li>
  </ul>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <th>招聘岗位</th>
      <th>最低工资</th>
      <th>最高工资</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%=link_to(job.title,job_path(job))%></td>
        <td><%=job.wage_lower_bound%></td>
        <td><%=job.wage_upper_bound%></td>
        <td><%=job.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
